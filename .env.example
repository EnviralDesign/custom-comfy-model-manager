# ComfyUI Model Manager Configuration
# Copy this file to .env and edit values

# === Required: Storage Roots ===
# Point directly to the ComfyUI models folder on each side
LOCAL_MODELS_ROOT=D:\ComfyUI\models
LAKE_MODELS_ROOT=Y:\ComfyUI\models

# === Deletion Policy (sync only, dedupe ignores these) ===
LOCAL_ALLOW_DELETE=false
LAKE_ALLOW_DELETE=false

# === Queue Settings ===
QUEUE_CONCURRENCY=1
QUEUE_RETRY_COUNT=3

# === Hashing ===
HASH_WORKERS=2

# === App Data ===
# Where SQLite DB and app state are stored
# Default: %APPDATA%\ComfyModelManager
APP_DATA_DIR=

# === Server ===
HOST=127.0.0.1
PORT=8420

# === xAI (Grok) ===
# Used for AI-assisted source URL discovery
XAI_API_KEY=
XAI_LOOKUP_CONCURRENCY=1
AI_LOOKUP_MODE=tool_agent
AI_TOOL_MAX_STEPS=20

# === Civitai ===
# Optional but recommended for restricted model downloads
CIVITAI_API_KEY=
CIVITAI_API_BASE_URL=https://civitai.com

# === Hugging Face ===
# Optional token for gated/private repos
HUGGINGFACE_API_KEY=

# === Downloader Service ===
DOWNLOADER_HOST=127.0.0.1
DOWNLOADER_PORT=8421
DOWNLOADER_STALL_TIMEOUT_SECONDS=2
DOWNLOADER_CONNECT_TIMEOUT_SECONDS=10
DOWNLOADER_MAX_CONCURRENT=1
